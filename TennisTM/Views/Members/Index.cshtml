@model List<User>

@{
    ViewData["Title"] = "Members";
}

<h1 class="my-5">Members</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">S.N.</th>
            <th scope="col">Name</th>
            <th scope="col">Id</th>
            <th scope="col">Promote</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model)
        {
            <tr>
                <th scope="row">@(Model.IndexOf(member) + 1)</th>
                <td>@member.Name</td>
                <td>@member.Id</td>
                <td><a class="btn btn-success" href="/Members/Promote/@member.Id">Make Coach</a></td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" href="/">Back to List</a>
