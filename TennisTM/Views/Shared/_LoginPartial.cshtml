@using Microsoft.AspNetCore.Identity
@using TennisTM.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        <li class="nav-item px-3">
            <a id="manage" class="nav-link text-primary text-uppercase fw-bold" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@user.Name</a>
        </li>
        <li class="nav-item px-3">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-uppercase fw-bold text-dark">Logout</button>
            </form>
        </li>
    }
</ul>
